generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String
  createdAt    DateTime     @default(now())
  avatars      UserAvatar[]
  looks        TryOnLook[]
  sessions     TryOnSession[]
  orders       Order[]
}

model Product {
  id        String   @id @default(uuid())
  title     String
  price     Float
  brand     String   @default("")
  category  String
  size      String
  condition String
  tag           String              @default("Second-hand")
  stock         Int                 @default(1)
  imageUrl      String
  isTryOnCutout Boolean             @default(false)
  createdAt     DateTime            @default(now())
  tryOnConfig   ProductTryOnConfig?
  orderItems    OrderItem[]
}

enum GarmentType {
  TOP
  BOTTOM
  OUTER
  DRESS
  SHOES
  ACCESSORY
}

model UserAvatar {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  originalUrl String
  cutoutUrl   String
  width       Int?
  height      Int?
  createdAt   DateTime    @default(now())
  looks       TryOnLook[]
}

model ProductTryOnConfig {
  id          String      @id @default(cuid())
  productId   String      @unique
  product     Product     @relation(fields: [productId], references: [id])
  garmentType GarmentType
  cutoutUrl   String?
  anchorX     Float
  anchorY     Float
  scale       Float
  rotationDeg Float       @default(0)
}

enum TryOnStatus {
  CREATED
  UPLOADED               // Poză brută urcată
  BG_REMOVAL_QUEUED      // În coadă pentru remove.bg
  BG_REMOVAL_DONE        // Fundal scos cu succes
  READY_FOR_TRYON        // Om decupat, gata de probă
  TRYON_QUEUED           // În coadă pentru Replicate
  TRYON_DONE             // Imagine generată AI
  IN_CART                // Adăugat în coș
  CHECKOUT_STARTED
  PAID
  COMPLETED
  FAILED
}

model TryOnSession {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  status      TryOnStatus   @default(CREATED)
  
  // Assets linked to this session
  assets      TryOnAsset[]
  jobs        TryOnJob[]
  
  currentResultUrl String?   // Ultima imagine generată/procesată
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  orderId     String?
  order       Order?        @relation(fields: [orderId], references: [id])
}

model TryOnAsset {
  id          String        @id @default(cuid())
  sessionId   String
  session     TryOnSession  @relation(fields: [sessionId], references: [id])
  type        String        // 'RAW', 'CUTOUT', 'RESULT'
  url         String
  createdAt   DateTime      @default(now())
}

model TryOnJob {
  id          String        @id @default(cuid())
  sessionId   String
  session     TryOnSession  @relation(fields: [sessionId], references: [id])
  type        String        // 'BG_REMOVAL', 'AI_TRYON'
  status      String        // 'PENDING', 'PROCESSING', 'COMPLETED', 'FAILED'
  payload     Json?
  result      Json?
  error       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Order {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  totalAmount Float
  status      String        // 'PENDING', 'PAID', 'SHIPPED'
  stripeId    String?       @unique
  
  items       OrderItem[]
  sessions    TryOnSession[] // Sesiunile de probă care au dus la această comandă
  
  createdAt   DateTime      @default(now())
}

model OrderItem {
  id          String        @id @default(cuid())
  orderId     String
  order       Order         @relation(fields: [orderId], references: [id])
  productId   String
  product     Product       @relation(fields: [productId], references: [id])
  price       Float
  quantity    Int           @default(1)
}

model TryOnLook {
  id         String     @id @default(cuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  avatarId   String
  avatar     UserAvatar @relation(fields: [avatarId], references: [id])
  name       String?
  sceneJson  Json
  previewUrl String?
  createdAt  DateTime   @default(now())
}
